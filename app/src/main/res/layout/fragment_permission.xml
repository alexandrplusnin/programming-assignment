<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.permission.PermissionFragment">

    <TextView
        android:id="@+id/permission_header"
        android:paddingStart="@dimen/double_margin"
        android:paddingEnd="@dimen/double_margin"
        android:textAppearance="?textAppearanceHeadline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/programming_assignment_all_files_access_is_required"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/permission_message"
        android:paddingStart="@dimen/double_margin"
        android:paddingEnd="@dimen/double_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/programming_assignment_all_files_access_is_require_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/permission_header" />

    <Button
        android:id="@+id/permission_grant_access"
        android:layout_margin="@dimen/double_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/programming_assignment_grant_access"/>

</androidx.constraintlayout.widget.ConstraintLayout>
